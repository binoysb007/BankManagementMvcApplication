<h2 style="text-align:center">Transfer amount</h2>

<!DOCTYPE html>
@{
    var message = TempData["AlertMessage"] ?? string.Empty;
}
<link href="~/Content/Global_s2por.css" rel="stylesheet" />
<script type="text/javascript">
    var message = '@message';
    if(message)
        alert(message);
</script>
<h2 class ="header"> Transfer</h2>
<html>

<body>
    <div class="form_div">
        @using (Html.BeginForm())
        {
            <table class="tbl" cellspacing="5px" cellpadding="5px">
                <tr>
                    <td>@Html.LabelFor(m => m.source_account_id)</td>
                    <td>@Html.TextBoxFor(m => m.source_account_id, new { @readonly = "readonly" })</td>
                    <td></td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.target_account_id)</td>
                    <td>@Html.TextBoxFor(m => m.target_account_id)</td>
                    <td>@Html.ValidationMessageFor(m => m.target_account_id, "", new { @style = "color: red" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Transfer_amount)</td>
                    <td>@Html.TextBoxFor(m => m.Transfer_amount)</td>
                    <td>@Html.ValidationMessageFor(m => m.Transfer_amount, "", new { @style = "color: red" })</td>


                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" onclick="return confirm('Are you sure you want transfer ?');" value="Transfer"/></td>
                    @Html.ActionLink("Cancel", "AccountByCustomerId")
                    <td></td>
                </tr>
            </table>
        }
    </div>
</body>
</html>

