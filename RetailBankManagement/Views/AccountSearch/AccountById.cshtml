<link href="~/Content/Global_s2por.css" rel="stylesheet" />

<h2 class="header">Account search details</h2>
<div class="form_div">
    <table class="tbl" cellspacing="5px" cellpadding="5px">
        @{


            <tr>
                <th>
                    Account ID
                </th>
                <th>
                    Customer ID
                </th>
                <th>
                    Account type
                </th>
                <th>
                   Balance(INR)
                </th>
                <th>
                    Operations
                </th>
            </tr>

            for (int i = 0; i < Model.AccountDATA.Tables[0].Rows.Count; i++)
            {
                var AccountID = Model.AccountDATA.Tables[0].Rows[i]["AccountID"].ToString();
                var CustomerID = Model.AccountDATA.Tables[0].Rows[i]["CustomerID"].ToString();
                var AccountType = Model.AccountDATA.Tables[0].Rows[i]["AccountType"].ToString();
                var DepositAmount = Model.AccountDATA.Tables[0].Rows[i]["DepositAmount"].ToString();

                <tr>
                    <td>
                        @AccountID
                    </td>
                    <td>
                        @CustomerID
                    </td>
                    <td>
                        @AccountType
                    </td>
                    <td>
                        @DepositAmount
                    </td>

                    <td>
                        @Html.ActionLink("Deposit", "Deposit", new { id = Model.AccountDATA.Tables[0].Rows[i]["AccountID"].ToString() })

                        @Html.ActionLink("Withdraw", "Withdraw", new { id = Model.AccountDATA.Tables[0].Rows[i]["AccountID"].ToString() })

                        @Html.ActionLink("Transfer", "transfer", new { id = Model.AccountDATA.Tables[0].Rows[i]["AccountID"].ToString() })
                    </td>
                </tr>


            }

        }
    </table>
    @Html.ActionLink("Download word file", "DownloadWordAccountDetails");
</div>



