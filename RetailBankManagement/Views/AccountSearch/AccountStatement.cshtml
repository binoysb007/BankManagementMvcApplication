@using (Html.BeginForm())
{
    <div class="form_div">
        <table class="tbl" cellspacing="5px" cellpadding="5px">
            <tr>
                <td>
                    @Html.LabelFor(a => a.AccountID)
                </td>
                <td>
                    @Html.TextBoxFor(a => a.AccountID)
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.AccountID)
                </td>
            </tr>
            <tr>
                @{
    List<SelectListItem> list = new List<SelectListItem>();
    list.Add(new SelectListItem { Text = "--Select--", Value = "", Selected = true });
    list.Add(new SelectListItem { Text = "1", Value = "1" });
    list.Add(new SelectListItem { Text = "2", Value = "2" });
    list.Add(new SelectListItem { Text = "3", Value = "3" });
    list.Add(new SelectListItem { Text = "4", Value = "4" });
