    list.Add(new SelectListItem { Text = "7", Value = "7" });
    list.Add(new SelectListItem { Text = "8", Value = "8" });
    list.Add(new SelectListItem { Text = "9", Value = "9" });
    list.Add(new SelectListItem { Text = "10", Value = "10" });
                }
                <td>
                    @Html.LabelFor(a => a.transaction_no)
                </td>
                <td>
                    @Html.DropDownListFor(a => a.transaction_no, list, new { @class = "from-control" })
                </td>
            </tr>
            <tr>
                <td>
                    <input id="SearchAccount" type="submit" value="Search" />
                </td>
            </tr>
        </table>
    </div>
}
@{

    var message = TempData["AlertMessage"] ?? string.Empty;
}
<script type="text/javascript">
    var message = '@message';
    if (message)
        alert(message);
</script>

